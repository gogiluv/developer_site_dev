				<a href="/shaders?type=<%= @type %>&p=<%= num %>&keyword=<%= @keyword %>">
					<% if @p==num %>
						<b><%= num %></b>
					<% else %>
						<%= num %>
					<% end %>
				</a>
			<% end %>
			<a href="/shaders?type=<%= @type %>&p=<%= @p+5 %>&keyword=<%= @keyword %>">>></a>
		</div>
