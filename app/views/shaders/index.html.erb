<script type="text/javascript">

$(function(){
	Shader.index_params.type = '<%= @type %>';
	Shader.index_params.p = '<%= @p %>';
	Shader.index_params.keyword = '<%= @keyword %>';
	
	switch(Shader.index_params.type){
		case 'bookmark':
			$('#bookmark').addClass('active');
			break;
		case 'my':
			$('#my').addClass('active');
			break;
		default:
			$('#latest').addClass('active');

	}
});

</script>
